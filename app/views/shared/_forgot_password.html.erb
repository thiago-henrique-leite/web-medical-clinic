<div class="container">
  <div id="logreg-forms">
    <div class="row justify-content-center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Recuperação de Conta</h1>
        <%= render "patients/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control shadow rounded" %>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit "Enviar e-mail de redefinição de senha", class: "btn btn-outline-light btn-lg recovery-password" %>
          <style> 
            .btn.btn-outline-light.btn-lg.recovery-password {
                background-color: green;
                transition: all 0.3s;
                cursor: pointer;
                align-items: center;
            }
            .btn.btn-outline-light.btn-lg.signup:recovery-password{
              -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
            }
          </style>  
        </div>

        <div class="form-group row justify-content-center">
          <%= link_to "Sign in", new_session_path(resource_name), class: "btn btn-outline-light btn-lg back" %><br/>
          <style> 
            .btn.btn-outline-light.btn-lg.back {
                background-color: #ff0000;
                transition: all 0.3s;
                cursor: pointer;
                align-items: center;
            }
            .btn.btn-outline-light.btn-lg.back:hover{
              -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
            }
          </style>  
        </div>

        <div class="form-group row justify-content-center">
          <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-outline-light btn-lg signup" %>
          <style> 
            .btn.btn-outline-light.btn-lg.signup {
                background-color: blue;
                transition: all 0.3s;
                cursor: pointer;
                align-items: center;
            }
            .btn.btn-outline-light.btn-lg.signup:hover{
              -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
            }
          </style>  
        </div>
      <% end %>
    </div>
  </div>
</div>
