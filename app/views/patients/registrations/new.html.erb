<div class="container">
  <div id="logreg-forms">
      <div class="row justify-content-center">
        <%= render "patients/shared/error_messages", resource: resource %></br>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Paciente - Sign up</h1>

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Senha", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirme a senha", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :name, placeholder: "Nome", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :cpf, placeholder: "CPF", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :phone, placeholder: "Telefone: (xx) xxxxx-xxxx", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.label :data_de_nascimento %>
            <%= f.date_field :birthday, as: :date, class: "form-control shadow rounded" %> 
          </div>

          <div class="field">
            <%= f.text_field :zipcode, placeholder: "CEP: xxxxx-xxx", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :profession, placeholder: "Profissão", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :health_insurance, placeholder: "Convênio Médico", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :card_number, placeholder: "Número da Carteirinha do Convênio", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
            <%= f.text_field :address_number, placeholder: "Número da Casa (opcional)", class: "form-control shadow rounded" %>
          </div>

          <div class="field">
              <%= f.text_field :marital_status, placeholder: "Estado Civil", class: "form-control shadow rounded" %> 
          </div>
          
          <div class="field">
              <%= f.text_field :gender, placeholder: "Gênero: M ou F", class: "form-control shadow rounded" %> 
          </div>

          <div class="form-group row justify-content-center">
            <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg signup" %>
            <style> 
              .btn.btn-outline-light.btn-lg.signup {
                  background-color: blue;
                  transition: all 0.3s;
                  cursor: pointer;
                  align-items: center;
              }
              .btn.btn-outline-light.btn-lg.signup:hover{
                -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
                filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              }
            </style>  
          </div>

            <div class="form-group row justify-content-center">
            <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-light btn-lg back" %><br/>
            <style> 
              .btn.btn-outline-light.btn-lg.back {
                  background-color: green;
                  transition: all 0.3s;
                  cursor: pointer;
                  align-items: center;
              }
              .btn.btn-outline-light.btn-lg.back:hover{
                -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
                filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              }
            </style>  
          </div>
        <% end %>
      </div>
  </div>
</div>
