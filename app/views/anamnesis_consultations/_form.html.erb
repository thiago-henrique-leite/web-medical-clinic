<div class="container">
  <div id="logreg-forms">
    <div class="row justify-content-center">
      <% if anamnesis_consultation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(anamnesis_consultation.errors.count, "error") %> prohibited this anamnesis_consultation from being saved:</h2>

          <ul>
            <% anamnesis_consultation.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with(model: anamnesis_consultation) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Anamnese - Consulta <%=params[:consultation_id]%></h1>
        <%= f.hidden_field :anamnesi_id, value: 1 %>
        <%= f.hidden_field :patient_id, value: current_patient.id %>
        <%= f.hidden_field :consultation_id, value: params[:consultation_id] %>

        <%= @response = "" %>
        <% Anamnesi.find(1).questions.each do |question| %>
          <%= f.label question.description %>
          <%= f.text_field :partial_answer, class: "form-control shadow rounded", :id=>'keyword' %>
        <% end %><hr>

         <%= f.hidden_field :answer, value: @response %>

        <div class="form-group row justify-content-center">
            <%= f.submit "Responder", class: "btn btn-outline-light btn-lg signup" %>
            <style> 
              .btn.btn-outline-light.btn-lg.signup {
                  background-color: green;
                  transition: all 0.3s;
                  cursor: pointer;
                  align-items: center;
              }
              .btn.btn-outline-light.btn-lg.signup:hover{
                -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
                filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              }
            </style>  
          </div>

          <div class="form-group row justify-content-center">
            <%= link_to "Voltar", "/dashboard/patient#consults", class: "btn btn-outline-light btn-lg back" %><br/> 
            <style> 
              .btn.btn-outline-light.btn-lg.back {
                  background-color: red;
                  transition: all 0.3s;
                  cursor: pointer;
                  align-items: center;
              }
              .btn.btn-outline-light.btn-lg.back:hover{
                -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
                filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              }
            </style>  
          </div>
      <% end %>
    </div>
  </div>
</div>



