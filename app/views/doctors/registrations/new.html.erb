<div class="container">
  <div id="logreg-forms">
    <div class="row justify-content-center">
      <%= render "doctors/shared/error_messages", resource: resource %></br>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <h1 class="h3 mb-3 font-weight-normal" style="text-align: center">Médico(a) - Sign up</h1>

        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow rounded", placeholder: "E-mail" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Senha" %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded", placeholder: "Confirme a Senha" %>
        </div>

        <div class="field">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Nome" %>
        </div>

        <div class="field">
          <%= f.text_field :cpf, class: "form-control shadow rounded", placeholder: "CPF" %>
        </div>

        <div class="field">
          <%= f.text_field :phone, class: "form-control shadow rounded", placeholder: "Telefone (xx) xxxxx-xxxx" %>
        </div>

        <div class="field">
          <%= f.label :data_de_nascimento %>
          <%= f.date_field :birthday, class: "form-control shadow rounded", placeholder: "Data de Nascimento" %>
        </div>

        <div class="field">
          <%= f.text_field :crm, class: "form-control shadow rounded", placeholder: "CRM" %>
        </div>

        <div class="field">
          <div class="form-control shadow rounded">
            <%= f.label "Área de Atuação" %>
            <%= f.collection_select :speciality_id, Speciality.order(:name), :id, :name %>
          </div>
        </div>
        <hr>
        <div class="form-group row justify-content-center">
              <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg signup" %>
            <style> 
              .btn.btn-outline-light.btn-lg.signup {
                  background-color: blue;
                  transition: all 0.3s;
                  cursor: pointer;
                  align-items: center;
              }
              .btn.btn-outline-light.btn-lg.signup:hover{
                -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
                filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              }
            </style>  
          </div>

          <div class="form-group row justify-content-center">
            <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-light btn-lg back" %><br/>
            <style> 
              .btn.btn-outline-light.btn-lg.back {
                  background-color: green;
                  transition: all 0.3s;
                  cursor: pointer;
                  align-items: center;
              }
              .btn.btn-outline-light.btn-lg.back:hover{
                -webkit-filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
                filter: drop-shadow(7px 5px 3px rgba(0,0,0,.5));
              }
            </style>  
          </div>
      <% end %>
    </div>
  </div>
</div>



